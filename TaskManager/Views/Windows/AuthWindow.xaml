<Window x:Class="TaskManager.Views.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.Views.Windows"
        xmlns:vm="clr-namespace:TaskManager.ViewModels"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:AuthWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Label1}"
                   TextAlignment="Center"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   FontSize="20"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="1"
                 Grid.ColumnSpan="2"
                 Margin="10 20"
                 FontSize="20"
                 Text="{Binding Username}"/>
        <TextBlock Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Text="{Binding Label2}"
                   TextAlignment="Center"
                   FontSize="20"
                   VerticalAlignment="Center"/>

        <PasswordBox Grid.Row="3"
                     Grid.ColumnSpan="2"
                     Margin="10 20"
                     FontSize="20"
                     x:Name="myPswdBox"/>
        
        <Button Grid.Column="0"
                Grid.Row="4"
                Margin="10 20"
                CommandParameter="{Binding ElementName=myPswdBox}"
                Command="{Binding BtnClickOk}"
                Content="{Binding BtnContentOk}"/>

        <Button Grid.Column="1"
                Grid.Row="4"
                Margin="10 20"
                Command="{Binding BtnClickReg}"
                Content="{Binding BtnContentRegister}"/>
        
    </Grid>
</Window>
