<UserControl x:Class="TaskManager.Views.UserControls.Tasks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.Views.UserControls"
             xmlns:vm="clr-namespace:TaskManager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:TasksViewModel/>
    </UserControl.DataContext>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="9"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10 0 0 0"
                   FontSize="15"
                   TextWrapping="WrapWithOverflow">
            <Run Text="{Binding Label1}"/>
            <Run Text=" "/>
            <Run Text="{Binding PName}"/>
            <Run Text=", "/>
            <Run Text="{Binding Label2}"/>
            <Run Text=" "/>
            <Run Text="{Binding TName}"/>
        </TextBlock>

        <ListBox Grid.Row="2"
                 Grid.Column="0"
                 Grid.ColumnSpan="5"
                 Margin="5 0 0 0"
                 ItemsSource="{Binding NotesToDo}"
                 SelectedItem="{Binding SelectedNote}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.ScrollUnit="Pixel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 10 0 10" Background="{Binding Color}">
                        <TextBlock FontSize="18" Text="{Binding Content}"
                                   TextWrapping="Wrap"/>
                        <TextBlock FontSize="10" Text="{Binding Target}"
                                   TextWrapping="Wrap"/>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
                             
        </ListBox>

        <ListBox Grid.Row="2"
                 Grid.Column="5"
                 Grid.ColumnSpan="3"
                 Margin="5 0 0 0"
                 ItemsSource="{Binding NotesInProgress}"
                 SelectedItem="{Binding SelectedNote}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.ScrollUnit="Pixel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 10 0 10" Background="{Binding Color}">
                        <TextBlock FontSize="18" Text="{Binding Content}"
                                   TextWrapping="Wrap"/>
                        <TextBlock FontSize="10" Text="{Binding Target}"
                                   TextWrapping="Wrap"/>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <ListBox Grid.Row="2"
                 Grid.Column="8"
                 Grid.ColumnSpan="2"
                 Margin="5 0 0 0"
                 ItemsSource="{Binding NotesDone}"
                 SelectedItem="{Binding SelectedNote}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.ScrollUnit="Pixel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 10 0 10" Background="{Binding Color}">
                        <TextBlock FontSize="18" Text="{Binding Content}"
                                   TextWrapping="Wrap"/>
                        <TextBlock FontSize="10" Text="{Binding Target}"
                                   TextWrapping="Wrap"/>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        
        <!--Buttons-->

        <Button Grid.Column="1"
                Grid.Row="1"
                Content="S"
                Command="{Binding SaveNote}"
                Visibility="{Binding ChangeControlVisibility}"/>

        <Button Grid.Column="2"
                Grid.Row="1"
                Content="+"
                Command="{Binding AddCommand}"
                />
        
        <Button Grid.Column="3"
                Grid.Row="1"
                Content="-"
                Command="{Binding RemoveCommand}"
                CommandParameter="{Binding SelectedNote}"
                />

        <Button Grid.Column="4"
                Grid.Row="1"
                Content=">"
                Command="{Binding TransferProject}"
                CommandParameter="{Binding SelectedNote}"
                />
        <!---->
        <Button Grid.Column="6"
                Grid.Row="1"
                Content="-"
                Command="{Binding RemoveCommandInProgress}"
                CommandParameter="{Binding SelectedNote}"
                />

        <Button Grid.Column="7"
                Grid.Row="1"
                Content=">"
                Command="{Binding TransferProjectInProgress}"
                CommandParameter="{Binding SelectedNote}"
                />
        <!---->
        <Button Grid.Column="9"
                Grid.Row="1"
                Content="-"
                Command="{Binding RemoveCommandDone}"
                CommandParameter="{Binding SelectedNote}"
                />

        <!--3 LABels-->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Margin="5 0 0 0"
                   VerticalAlignment="Center"
                   Text="{Binding Label3}"
                   />

        <TextBlock Grid.Row="1"
                   Grid.Column="5"
                   Margin="5 0 0 0"
                   VerticalAlignment="Center"
                   Text="{Binding Label4}"/>

        <TextBlock Grid.Row="1"
                   Grid.Column="8"
                   Margin="5 0 0 0"
                   VerticalAlignment="Center"
                   Text="{Binding Label5}"/>
        
        
        <StackPanel Orientation="Vertical"
                    Grid.Row="3"
                    Grid.ColumnSpan="5"
                    Visibility="{Binding ChangeControlVisibilityRead}">
            <TextBlock Text="{Binding Label6}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="10"
                       />
            <TextBox TextWrapping="WrapWithOverflow"
                     DataContext="{Binding SelectedNote}"
                     Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="180"
                     Margin="10 0 0 0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    Grid.Row="3"
                    Grid.Column="5"
                    Grid.ColumnSpan="5"
                    Visibility="{Binding ChangeControlVisibilityRead}">
            <TextBlock Text="{Binding Label7}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="10"/>
            <TextBox TextWrapping="Wrap"
                     DataContext="{Binding SelectedNote}"
                     Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="30"
                     Margin="10 0 10 0"/>
            
        </StackPanel>

    </Grid>
</UserControl>
