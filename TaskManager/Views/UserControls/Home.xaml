<UserControl x:Class="TaskManager.Views.UserControls.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.Views.UserControls"
             xmlns:vm="clr-namespace:TaskManager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Добро пожаловать, элекстронный адрес/никнейм-->
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontSize="40"
                   Margin="20 0 0 0"
                   Grid.Row="0"
                   Grid.ColumnSpan="6">
            <Run Text="{Binding Path=Welcome}"/>
            <Run Text=", "/>
            <Run Text="{Binding Path=Email}"/>
        </TextBlock>
        <!--Open or create new project-->
        <TextBlock Grid.Row="1"
                   Margin="20 0 0 0"
                   Grid.ColumnSpan="6"
                   FontSize="20"
                   Text="{Binding Path=Label2}">
            
        </TextBlock>
        <!--Change a note or create-->
        <TextBlock Grid.Row="3"
                   Margin="20 0 0 0"
                   Grid.ColumnSpan="6"
                   FontSize="20"
                   Text="{Binding Path=Label3}"/>
        <!--Button Create or open project-->
        <Button Grid.Column="0"
                Grid.Row="2"
                Margin="20 30">
            <TextBlock Text="+"
                       FontSize="50"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0 0 0 15"/>

        </Button>


    </Grid>
</UserControl>
