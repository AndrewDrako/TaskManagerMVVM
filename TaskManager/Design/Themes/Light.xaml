<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TaskManager">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--Background image-->

    <ImageSource x:Key="imgSource">
        /Design/Images/BlueTheme.jpg
    </ImageSource>
    
    <!--Main stack panel color--> 

    <Color x:Key="mainSPColor">
        #D7D7D7
    </Color>
    
    <!--Background Color-->

    <Color x:Key="backgroundColor">
        #FFFFFF
    </Color>
    
    <!--Font color-->

    <Brush x:Key="fontColor">
        #000000
    </Brush>
    
    <!--Button color-->

    <Brush x:Key="btnColor">
        #0088FF
    </Brush>
    
    <!-- Page Main Color-->

    <Brush x:Key="pageMainColor">
        #FFFFFF
    </Brush>
    
    <!--Page Second Color-->

    <Brush x:Key="pageSecondColor">
        #8ACFFF
    </Brush>

</ResourceDictionary>