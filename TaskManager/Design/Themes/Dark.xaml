<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TaskManager">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--Background image-->

    <ImageSource x:Key="imgSource">
        /Design/Images/DarkTheme.jpg
    </ImageSource>

    <!--Main stack panel color-->

    <Color x:Key="mainSPColor">
        #4E4E4E
    </Color>

    <!--Background Color-->

    <Color x:Key="backgroundColor">
        #323232
    </Color>

    <!--Font color-->

    <Brush x:Key="fontColor">
        #FFFFFF
    </Brush>

    <!--Button color-->

    <Brush x:Key="btnColor">
        #000
    </Brush>

    <!-- Page Main Color-->

    <Brush x:Key="pageMainColor">
        #353535
    </Brush>

    <!--Page Second Color-->

    <Brush x:Key="pageSecondColor">
        #353535
    </Brush>
    
</ResourceDictionary>